<h1>許願卡</h1>

<%= link_to "新增許願卡", new_wish_list_path %>

<% @wish_lists.each do |list| %>
    <li>
        <%= link_to "編輯", edit_wish_list_path(list) %>
        <%= link_to "刪除", wish_list_path(list), method: "delete", data: {confirm: "是否刪除"} %>

        <%= link_to list.title, wish_list_path(id: list.id) %>
    </li>
<% end %>